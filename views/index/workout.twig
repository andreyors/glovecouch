{% extends "layout/base.twig" %}

{% block title %}
Buds' Workout
{% endblock %}

{% block content %}
<p></p>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Buds' Workout</li>
</ol>

<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-street-view"></i>&nbsp;Workout on air</div>
            <div class="panel-body">
                Started 1 minute ago
                
                <div class="progress active">
                    <div class="progress-bar progress-bar-default progress-bar-striped" role="progressbar" aria-valuenow="{{ (cnt * 100 / 30) | round }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ (cnt * 100 / 30) | round }}%">{{ (cnt * 100 / 30) | round }}%</div>
                </div>
            </div>
        </div>
    </div>
    
    {% if not like %}
    <div class="col-xs-12">
        <a id="likeBtn" href="/like" class="btn btn-block btn-primary btn-lg"><i class="fa fa-hand-o-up"></i>&nbsp;Give a glove</a>
    </div>
    {% else %}
    <div class="col-xs-12">
        <div class="well">Power is shipped</div>
    </div>
    {% endif %}
    
    <div class="clearfix"></div>
    
    <p><br /></p>
    
    <div class="col-xs-6">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-user-secret"></i>&nbsp;Who's on workout</div>
            <div class="panel-body">
                <span>
                    <strong>Conan T.</strong><br />
                    Crazy glover<br />
                    459th in <strong>G<span style="color: pink">love</span></strong>Rank
                </span>  
            </div>
        </div>
    </div>
    
    <div class="col-xs-6">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="fa fa-tags"></i>&nbsp;Badges & Social</div>
            <div class="panel-body">
                <ul class="tasks">
                    <li>5d streak</li>
                    <li>Berliner Donat</li>
                    <li><strong>47</strong> persons likes him</li>
                </ul>
            </div>
        </div>
    </div>
    
</div>

<script type="text/javascript">
    jQuery(document).ready(function() {
        jQuery('#likeBtn').on('click', function(e) {
            e.preventDefault();
            jQuery.ajax('/ajax/like');
        });  
    });
</script>
{% endblock %}
