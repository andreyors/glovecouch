<ul class="list-group">
    <li class="list-group-item">
        <strong>Set 1: 10 reps</strong>
        <span class="badge">{{ cnt|default('0') }}</span>
    </li>
    <li class="list-group-item">
        Set 2: 10 reps
        <span class="badge">0</span>
    </li>
    <li class="list-group-item">
        Set 3: 10 reps
        <span class="badge">0</span>
    </li>
</ul>

<div class="progress active">
    <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="{{ (cnt * 100 / 30) | round }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ (cnt * 100 / 30) | round }}%">{{ (cnt * 100 / 30) | round }}%</div>
</div>

<div class="btn-group btn-group-justified">
    <a href="/" class="btn btn-default btn-default"><i class="fa fa-pause"></i>&nbsp;&nbsp;Pause</a>
    <a href="/" class="btn btn-default btn-primary"><i class="fa fa-forward"></i>&nbsp;&nbsp;Next</a>    
</div>